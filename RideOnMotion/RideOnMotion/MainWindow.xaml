<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RideOnMotion" x:Name="MainWindow1" x:Class="RideOnMotion.MainWindow"
        Title="RideOn[Motion]" Height="600" Width="800"
        Loaded="MainWindow_Loaded" MinWidth="800" MinHeight="600"
        Closing="MainWindow_Closing">

    <Window.CommandBindings>
    </Window.CommandBindings>

    <DockPanel>
        <DockPanel.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </DockPanel.Background>
        
        <StatusBar DockPanel.Dock="Bottom">
            <Image Height="16" VerticalAlignment="Center" Source="Images/KinectIcon.png" />
            <TextBlock x:Name="KinectStatusText" Text="{Binding SensorStatusInfo}"></TextBlock>
            <Separator />
            <Image Height="16" VerticalAlignment="Center" Source="Images/HelicopterIcon.png" />
            <TextBlock x:Name="DroneStatusText">No drone</TextBlock>
        </StatusBar>

        <Menu DockPanel.Dock="Top">
            <Menu.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuBarColorKey}}"/>
            </Menu.Background>
            <MenuItem Header="File">
                <MenuItem Header="Quit" Click="MenuItem_Quit_Click" />
            </MenuItem>
            <MenuItem Header="Kinect">
                <MenuItem Header="Kinect settings" Command="{Binding OpenKinectSettingsCommand}" />
                <Separator />
                <MenuItem Header="Reset Kinect" Command="{Binding ResetSensorCommand}" />
            </MenuItem>
        </Menu>

        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="75" Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="DepthViewerPanel" MinHeight="150" Grid.Row="0" Grid.Column="0" Background="Black">
                <Viewbox>
                    <Image Name="DepthImage" Width="640" Height="480" Source="{Binding DepthBitmapSource}"/>
                </Viewbox>
            </StackPanel>

                <GroupBox Header="Status information" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3">
                    <StackPanel>
                        <TextBlock x:Name="KinectStatusInfo" Text="{Binding SensorStatusInfo}"/>
                    </StackPanel>
                </GroupBox>

            <GridSplitter Grid.Column="1" Width="3" Grid.RowSpan="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

            <!-- Main panel - Background -->
            <StackPanel Background="Black" x:Name="MainPanel" Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
            </StackPanel>
            <!-- Main panel - Canvas -->
            <Viewbox Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
                <Canvas Background="#7F00FF00" Width="640" Height="480" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <!-- Blue Left hand point -->
                    <Ellipse Visibility="{Binding LeftHandVisibility}"
                                Canvas.Left="{Binding LeftHandX}" Canvas.Top="{Binding LeftHandY}"
                                Fill="Blue" Height="15" Name="leftHand" Width="15" />
                    <!-- Red Right hand point -->
                    <Ellipse Visibility="{Binding RightHandVisibility}"
                                Canvas.Left="{Binding RightHandX}" Canvas.Top="{Binding RightHandY}"
                                Fill="Red" Height="15" Name="rightHand" Width="15" />
                    <!-- Test rectangles -->
                    <Rectangle Width="200" Height="50" Canvas.Left="60" Canvas.Top="140" Fill="#7FFF00A2"></Rectangle>
                    <Rectangle Width="200" Height="50" Canvas.Left="60" Canvas.Top="290" Fill="#7FFF00A2"></Rectangle>
                    <Rectangle Width="50" Height="200" Canvas.Left="60" Canvas.Top="140" Fill="#7FFF00A2"></Rectangle>
                    <Rectangle Width="50" Height="200" Canvas.Left="210" Canvas.Top="140" Fill="#7FFF00A2"></Rectangle>
                    
                    <Rectangle Width="200" Height="50" Canvas.Left="380" Canvas.Top="140" Fill="#7FFF00A2"></Rectangle>
                    <Rectangle Width="200" Height="50" Canvas.Left="380" Canvas.Top="290" Fill="#7FFF00A2"></Rectangle>
                    <Rectangle Width="50" Height="200" Canvas.Left="380" Canvas.Top="140" Fill="#7FFF00A2"></Rectangle>
                    <Rectangle Width="50" Height="200" Canvas.Left="530" Canvas.Top="140" Fill="#7FFF00A2"></Rectangle>
                    
                </Canvas>
            </Viewbox>

            <DockPanel x:Name="LogPanel"  Grid.Row="3" Grid.Column="2" >
                <ListBox x:Name="LogDataGrid" ItemsSource="{Binding LogList}" VerticalAlignment="Stretch" />
            </DockPanel>

            <GridSplitter Grid.Row="2" Grid.Column="2" Height="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" ResizeDirection="Rows" />
        </Grid>
    </DockPanel>
</Window>
