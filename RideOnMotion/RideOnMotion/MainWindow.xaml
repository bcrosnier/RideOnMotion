<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RideOnMotion" x:Name="MainWindow1" x:Class="RideOnMotion.MainWindow"
        Title="RideOn[Motion]" Height="600" Width="800" Loaded="MainWindow_Loaded" MinWidth="800" MinHeight="600">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel x:Name="LeftSidebar" Width="200" DockPanel.Dock="Left">
                <StackPanel MinHeight="160">
                    <Viewbox>
                        <local:DepthViewer/>
                    </Viewbox>
                </StackPanel>
                <StackPanel/>
            </StackPanel>
            <StackPanel x:Name="LogPanel" VerticalAlignment="Top" DockPanel.Dock="Bottom">
                <Label Content="Log lol"/>
            </StackPanel>
            <StackPanel Background="Red">
                <Viewbox>
                    <Image/>
                </Viewbox>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
